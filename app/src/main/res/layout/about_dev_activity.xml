<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        >


        <ImageView
            android:layout_width="150dp"
            android:layout_height="168dp"
            android:scaleType="centerCrop"
            android:src="@drawable/satyajit"/>



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_marginTop="15dp"
        android:layout_below="@id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satyajit Pradhan"
        android:fontFamily="@font/halogen"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/cllg"
        android:layout_below="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Lovely Professional University - "
        android:fontFamily="@font/cav"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

<LinearLayout
    android:layout_below="@id/cllg"
    android:id="@+id/social"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fb"
        android:layout_width="64dp"
         android:layout_height="64dp"
        android:src="@drawable/fb"/>

    <ImageView
        android:id="@+id/linked"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/link"/>
    <ImageView
        android:id="@+id/github"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:src="@drawable/git"/>

</LinearLayout>


    <TextView
        android:id="@+id/libs"
        android:layout_marginTop="15dp"
        android:layout_below="@id/social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libs Used"
        android:fontFamily="@font/halogen"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />



<LinearLayout
    android:id="@+id/line1"
    android:gravity="center"
    android:layout_below="@id/libs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/all"
            android:layout_below="@id/libs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            card_view:cardElevation="2dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >
                  <TextView
                     android:layout_width="wrap_content"
                    android:layout_gravity="center"
                      android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cav"
                    android:text="Volley"
                    />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/graph"
            android:layout_below="@id/libs"
            android:layout_toRightOf="@id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:layout_margin="5dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

              <TextView
                  android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cav"
                    android:text="Graph View"
                    />

 </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/spots"
            android:layout_below="@id/libs"
            android:layout_toRightOf="@id/graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:layout_margin="5dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:text="The Spots Dialog"
                />

        </androidx.cardview.widget.CardView>

</LinearLayout>


    <LinearLayout
        android:id="@+id/line2"
        android:gravity="center"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/pica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:layout_margin="5dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:text="Picasso"
                />
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                android:layout_margin="5dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"

                >

                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cav"
                    android:text="Droidsonroids"
                    />

            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:layout_margin="5dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:text="MaterialScrollbar"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>