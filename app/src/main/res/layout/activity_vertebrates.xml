<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/main"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/lin1"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/fish"
            android:onClick="fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="10dp"
            card_view:cardElevation="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fish"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Fish"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/amphibians"
            android:onClick="amphibians"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/frog"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Amphibians"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>














    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lin1"
        android:gravity="center"

        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/pre_mammals"
            android:onClick="premam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="10dp"
            card_view:cardElevation="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/prem"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Pre Mammals"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/mammals"
            android:onClick="mammals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mam"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Mammals"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lin2"
        android:gravity="center"

        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/reptiles"
            android:onClick="reptiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="10dp"
            card_view:cardElevation="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/reptile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Reptiles"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/birds"
            android:onClick="birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"

            >

            <LinearLayout
                android:layout_width="100dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/birds"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/halogen"
                    android:text="Birds"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>













</RelativeLayout>